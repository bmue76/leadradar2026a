{
  "expo": {
    "name": "LeadRadar Mobile",
    "slug": "leadradar-mobile",
    "scheme": "leadradar",
    "version": "0.1.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "icon": "./assets/images/icon.png",
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 220
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      "expo-secure-store"
    ],
    "android": {
      "package": "ch.leadradar.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ch.leadradar.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "LeadRadar benötigt die Kamera, um Visitenkarten zu scannen.",
        "NSPhotoLibraryUsageDescription": "LeadRadar benötigt Zugriff auf Fotos, um eine Visitenkarte auszuwählen.",
        "NSPhotoLibraryAddUsageDescription": "LeadRadar speichert das Foto temporär, um OCR auszuführen."
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b222af02-a420-4875-974a-49502aa09714"
      }
    }
  }
}
