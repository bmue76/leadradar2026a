generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  TENANT_OWNER
  TENANT_ADMIN
  SUPPORT
  PLATFORM_ADMIN
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

model Tenant {
  id            String       @id @default(cuid())
  slug          String       @unique
  name          String
  status        TenantStatus @default(ACTIVE)
  retentionDays Int          @default(365)

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  users         User[]

  @@index([slug])
}

model User {
  id        String   @id @default(cuid())
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  email     String   @unique
  name      String?
  role      UserRole @default(TENANT_ADMIN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
}
